{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="title">Informations du profil</h1>
    <div>
        <ul>
            <li>Prénom : {{ app.user.prenom }}</li>
            <li>Nom : {{ app.user.nom }}</li>
            <li>Pseudo : {{ app.user.pseudo }}</li>
            <li>Adresse email : {{ app.user.email }}</li>
            <li>Site de rattachement : {{ app.user.site.nom }}</li>
            <li>Numéro de téléphone :
                {% if app.user.telephone %}
                    {{ app.user.telephone }}
                {% else %}
                    <em>non renseigné</em>
                {% endif %}
            </li>
        </ul>
        <br>
        {% if is_granted("ROLE_ADMIN") %}
            Informations complémentaires : rôle d'administrateur.e
        {% endif %}
        <div id="avatar">
            {% if app.user.urlPhoto %}
            <img width="150px" type=file src="{{ app.user.urlPhoto }}" alt="votre avatar">
            {% else %}
            <img width="150px" src="{{ asset('assets/media/user_files/avatarTestCatJPG.jpg') }}" alt="default avatar image">
            {% endif %}
        </div>
    </div><br>
    <a href="{{ path('home_modify') }}" class="button">Modifier mon profil</a>
    <a href="{{ path('home_password') }}" class="button">Modifier mon mot de passe</a>
{% endblock %}

{% block title %}{{ parent() }} - Profil{% endblock %}

