{% block body %}
    <section class="box">
    <h2 class="title is-6">Liste des participants</h2>

    <table class="table is-hoverable">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Email</th>
                <th>Rôles</th>
                <th>Pseudo</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Téléphone</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.email }}</td>
                <td>{{ participant.roles ? participant.roles|json_encode : '' }}</td>
                <td>{{ participant.pseudo }}</td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.telephone }}</td>
                <td>
                    <a class="button is-light is-small is-primary" href="{{ path('app_participant_show', {'id': participant.id}) }}">Détails</a>
                    <a class="button is-light is-small is-warning" href="{{ path('app_participant_edit', {'id': participant.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Il n'y a pas de participants.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="button is-light is-success" href="{{ path('app_participant_new') }}">Ajouter un nouveau participant</a>
    </section>
{% endblock %}
